{
  "name": "yalesites-upstream",
  "license": "MIT",
  "scripts": {
    "confim": "./scripts/local/confim.sh",
    "confex": "./scripts/local/confex.sh",
    "import-local-db": "./scripts/local/import-data.sh",
    "build": "./scripts/local/build.sh",
    "rebuild": "./scripts/local/rebuild.sh",
    "export-db": "./scripts/local/export-db.sh",
    "get-db": "./scripts/local/get-db.sh",
    "get-files": "./scripts/local/get-files.sh",
    "get-assets": "./scripts/local/get-files.sh",
    "theme": "./scripts/local/theme.sh",
    "build-theme": "./scripts/local/build-theme.sh",
    "lint": "./scripts/local/lint.sh",
    "setup": "./scripts/local/setup.sh"
  },
  "devDependencies": {
    "@yalesites-org/eslint-config-and-other-formatting": "^1.5.0"
  },
  "scripts": {
    "prettier": "prettier web --ignore-unknown --list-different",
    "husky:commit-msg": "commitlint --edit $1",
    "lint:styles": "stylelint 'web/**/*.scss'",
    "lint:js": "eslint web",
    "husky:pre-commit": "lint-staged",
  },
  "lint-staged": {
    "web/**/*.scss": ["npm run lint:styles -- --fix"],
    "web/**/*.js": ["npm run lint:js -- --fix"],
    "web/**/*.{js,scss,php}": ["npm run prettier -- --write"]
  }
}
